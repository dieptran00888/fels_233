<%= render "layouts/header_admin" %>
<div class="container">
  <h1><%= t ".user_management" %></h1>

  <table class="table table-hover table-responsive">
    <tr>
      <th><%= t ".stt" %></th>
      <th><%= t ".name" %></th>
      <th><%= t ".email" %></th>
      <th><%= t ".option" %></th>
    </tr>
    <% @users.each.with_index do |user, index| %>
      <% unless user.is_admin %>
        <tr>
          <td> <%= index %> </td>
          <td> <%= user.name %> </td>
          <td> <%= user.email %> </td>
          <td>
            <span>
              <%= link_to t(".deletebutton"),
                admin_user_url(user), method: :delete,
                data: {confirm: t(".confirm_delete_message")},
                class: "btn btn-danger", remote: true %>
            </span>
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>

  <%= will_paginate %>
</div>