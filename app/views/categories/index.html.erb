<div class="row categories-header">
  <div class="col-md-7 col-md-offset-1">
    <h3>
      <%= link_to t(".link_category"), categories_path, class: "category-head" %>
    </h3>
  </div>
  <div class="col-md-3">
    <%= render "search_form" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="categories-content">
        <%= render @categories %>
      </div>
    </div>
    <%= will_paginate @categories %>
  </div>
</div>
