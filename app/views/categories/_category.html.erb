<div class="row category">
  <div class="category-item-content">
    <%= image_tag "https://goo.gl/RGQrxV" %>
  </div>
  <div class="category-item-name">
    <h3><strong><%= category.name %></strong></h3>
  </div>
  <div class="text-right">
    <small>
      <%= "#{@words_count[category.id]} / #{category.words.size}
        #{t(".words_learn")}" %>
    </small>
  </div>
  <div class="progress">
    <div class="progress-bar progress-bar-warning">
      <% if category.words.any? %>
        <%=
          "#{@words_count[category.id]*100/category.words.size}#{t ".percent"}"
        %>
      <% end %>
    </div>
  </div>
  <%= link_to t(".learn_button"), category, class: "btn btn-success" %>
</div>
